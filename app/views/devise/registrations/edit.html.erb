<div class="container vh-100 ">
  <%# <div class="main-img"></div> %>
  <div class="wrapper">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h1>Edit <%= resource_name.to_s.humanize %></h1>
      <%= f.error_notification %>
      <div class="pass-icon">
        <%= f.input_field :email, required: true, autofocus: true, id:"email", placeholder:"Email"  %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input_field :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { autocomplete: "current-password" }, class:"password", placeholder:"Current Password" %>
        <%= f.input_field :password, hint: "leave it blank if you don't want to change it", required: false, input_html: { autocomplete: "new-password" }, class:"password", placeholder:"New Password" %>
        <%= f.input_field :password_confirmation, required: false, input_html: { autocomplete: "new-password" }, class:"password", placeholder:"Confirm New Password" %>
      </div>

      <%= f.button :submit, "Update", id:"Sign-up-btn", class:"text-decoration-none" %>
      <div class="cancel-account">
        <hr>
      </div>
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"register-btn text-decoration-none mt-0", id:"Sign-up-btn" %>
      <div class="register">
        <%= link_to "Back", :back, class:"register-btn text-decoration-none px-4" %>
        <%= link_to "LogIn", new_session_path(resource_name), class:"register-btn text-decoration-none px-4" %>
      </div>
    <% end %>
  </div">
  </div>
</div>
