<div class="container py-5 mt-5">
  <h1>Dashboard<h1>
  <div class="card" style="width: 50rem;">
    <img class="card-img-top" src="https://images.unsplash.com/photo-1535990379313-5cd271a2da2d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1032&q=80" alt="Card image cap">
    <div class="card-body">
      <h3 class="card-title"><%= @company.name %></h3>
      <p class="card-text"><%= @company.description %></p>
      <%= link_to "edit information", edit_company_path, class: "btn btn-primary" %>
      <%= link_to "see all applications", applications_path, class: "btn btn-primary" %>
      <%= link_to "post a new job offer", new_offer_path, class: "btn btn-primary" %>
    </div>
  </div>

  <section id="services">
    <div  class="wrapper-offers">
      <h2> All open offers</h2>
        <div class="container service-cards">
          <% @offers.each do |offer| %>
            <div class="service-card ux">
              <div class="my-2 ">
                <%= cl_image_tag offer.company.photo.key, class:"avatar-square-shadow-m", crop: :thumb, gravity: :face %>
                <h2><%= offer.company.name %></h3>
              </div>
              <div class="my-2 ">
                <h3><%= offer.title %></h3>
              </div>
              <div class="my-2 ">
                <p><%= offer.description %></p>
              </div>
              <ul class="tags-ul">
                <li class="tags mt-2">
                  <%= offer.tag %>
                </li>
                <li class="tags mt-2">
                  <%= link_to "More info", offer_path(offer) %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
    </div>
  </section>
</div>
