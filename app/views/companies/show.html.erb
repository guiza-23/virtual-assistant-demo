
<h1>Dashboard<h1>
<div class="card" style="width: 50rem;">
  <img class="card-img-top" src="https://images.unsplash.com/photo-1535990379313-5cd271a2da2d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1032&q=80" alt="Card image cap">
  <div class="card-body">
    <h3 class="card-title"><%= @company.name %></h3>
    <p class="card-text"><%= @company.description %></p>
    <%= link_to "edit information", edit_company_path, class: "btn btn-primary" %>
    <%= link_to "see all applications", applications_path(@offer), class: "btn btn-primary" %>
  </div>
</div>

<h2>Open offers</h2>
<% @offers.each do |offer|%>
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h3 class="card-title"><%= offer.tag %></h3>
    <p class="card-text"><%= offer.description %></p>
    <%= link_to "see applications", offer_path, class: "btn btn-primary" %>
    <%= link_to "edit", edit_offer_path, class: "btn btn-primary" %>
    <%= link_to "Cancel", offer_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary" %>


  </div>
</div>
<% end %>
