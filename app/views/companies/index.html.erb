<section id="services">
  <div  class="wrapper-companies w-75">
    <h1>How can I help you?</h1>
    <h2>See all our companies</h2>
      <div class="container w-75 my-4">
        <%= form_with url: companies_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a company" %>
          <%= submit_tag "Search", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <div class="container service-cards">
        <% @companies.each do |company| %>
          <div class="service-card ux">
            <div class="my-2 ">
              <img src="https://malousloth.com/img/Icon%20material-computer.png" alt="Avatar company" class="avatar-square-shadow-lg">
            <%# <div class="avatar-square-shadow-lg">= company.photo</div> %>
            </div>
            <div class="my-2 ">
              <h2><%= company.name %></h3>
            </div>
            <div class="my-2 ">
            <p><%= company.description %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</section>
