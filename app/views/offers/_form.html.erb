<%= simple_form_for (@offer) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tag, as: :radio_buttons, collection: %i[Any Part-time Full-time], wrapper: :vertical_collection_inline %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= link_to 'Back', company_path, class:"btn btn-primary" %>
<% end %>
