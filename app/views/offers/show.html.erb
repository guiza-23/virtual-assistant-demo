<section id="services">
  <div  class="wrapper-offers">
    <h1>How can I help you?</h1>
    <h2>See all ours offers</h2>
      <div class="service-cards">
        <%# @offers.each do |offer| %>
          <div class="service-card ux">
            <div class="my-2 ">
              <img src="https://malousloth.com/img/Icon%20material-computer.png" alt="Avatar company" class="avatar-square">
              <h2><%= @offer.company.name %></h3>
            </div>
            <div class="my-2 ">
            <h3><%= @offer.title %></h3>
            </div>
            <div class="my-2 ">
            <p><%= @offer.description %></p>
            </div>
               <table class="table mb-0">
               <tbody>
               <% @applications.each do |application| %>
                  <tr class="fw-normal">
                    <td class="align-middle">
                      <span><%= application.assistant.firstname %></span>
                    </td>
                    <td class="align-middle">
                      <h6 class="mb-0"><span class="badge bg-success"><%= application.status %></span></h6>
                    </td>
                    <td class="align-middle">
                      <a href="#!" data-mdb-toggle="tooltip" title="Done"><i
                          class="fas fa-check text-success me-3"></i></a>
                      <a href="#!" data-mdb-toggle="tooltip" title="Remove"><i
                          class="fas fa-trash-alt text-danger"></i></a>
                    </td>
                  </tr>
                <% end %>
                </tbody>
            </table>

          
            </ul>
            <ul class="tags-ul">
              <li class="tags mt-2">
                <%= link_to 'Back', offers_path, class:"card-link" %>
              </li>
              <li class="tags mt-2">
                <%= link_to 'Edit', edit_offer_path(@offer), class:"card-link" %>
              </li>
              <li class="tags mt-2">
                <%= link_to "Cancel", offer_path(@offer), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-link" %>
              </li>
            </ul>
          </div>
        <%# end %>
      </div>
  </div>
</section>
