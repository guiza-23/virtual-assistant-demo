<section id="services">
  <div  class="wrapper-offers">
    <h1>How can I help you?</h1>
    <h2>See all ours offers</h2>
      <div class="container">
        <%= form_with url: offers_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find an offer by Tag: part-time, full-time, any OR by title" %>
          <%= submit_tag "Search", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <div class="container service-cards">
        <% @offers.each do |offer| %>
          <div class="service-card ux">
            <div class="my-2 ">
              <img src="https://malousloth.com/img/Icon%20material-computer.png" alt="Avatar company" class="avatar-square">
              <h2><%= offer.company.name %></h3>
            </div>
            <div class="my-2 ">
            <h3><%= offer.title %></h3>
            </div>
            <div class="my-2 ">
            <p><%= offer.description %></p>
            </div>
            <ul class="tags-ul">
              <li class="tags mt-2">
                <%= offer.tag %>
              </li>
              <li class="tags mt-2">
                <%= link_to "Info", offer_path(offer) %>
              </li>
               <li class="tags mt-2">
                <%= link_to "Apply", new_application_path %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
  </div>
</section>
