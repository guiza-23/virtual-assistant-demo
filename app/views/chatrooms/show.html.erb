<div class="container chatroom"
  data-controller="chatroom-subscription"
  data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>"
  data-chatroom-subscription-current-user-id-value="<%= current_user.id %>"
>

<div class="container">
  <div class="row clearfix">
      <div class="col-lg-12">
          <div class="card chat-app" style="height: 544px;">
              <div id="plist" class="people-list">
                  <div style="border-bottom: solid grey 1px">
                    <h4>chats</h4>
                  </div>
                  <ul class="list-unstyled chat-list mt-2 mb-0">
                  <% if current_user.company != nil %>
                    <% chatrooms = @chatrooms.where(company: current_user.company) %>
                    <% chatrooms.each do |chatroom| %>
                      <li class="clearfix">
                          <%= cl_image_tag chatroom.assistant.photo.key, class:"avatar-square-shadow-xlg", crop: :thumb, gravity: :face %>
                          <div class="about">
                            <%= link_to chatroom.assistant.lastname , chatroom_path(chatroom), class:"name" %>
                            <p style="font-size: 9px; font-weight: bolder;"><%= chatroom.mensajes.count %> mensajes</p>
                          </div>
                      </li>
                    <% end %>
                  <% else %>
                    <% chatrooms = @chatrooms.where(assistant: current_user.assistant) %>
                    <% chatrooms.each do |chatroom| %>
                      <li class="clearfix" style= "background-color: #80808024">
                          <%= cl_image_tag chatroom.company.photo.key, class:"avatar-square-shadow-xlg", crop: :thumb, gravity: :face %>
                          <div class="about">
                            <%= link_to chatroom.company.name, chatroom_path(chatroom), class:"name" %>
                            <p style="font-size: 9px; font-weight: bolder;"><%= chatroom.mensajes.count %> mensajes</p>
                          </div>
                      </li>
                    <% end %>
                  <% end %>
                  </ul>
              </div>

              <div class="chat">
                  <div class="chat-header clearfix">
                      <div class="row ml-6">
                          <div class="col-lg-6">
                            <% if current_user.type_of_user == 'Assistant' %>
                              <%= cl_image_tag @chatroom.company.photo.key, class:"avatar-square-shadow-xlg", crop: :thumb, gravity: :face %>
                                <div class="chat-about">
                                    <h6 class="m-b-0"><%= @chatroom.company.name %></h6>
                                    <small>online</small>
                                </div>
                              <% else %>
                                <%= cl_image_tag @chatroom.assistant.photo.key, class:"avatar-square-shadow-xlg", crop: :thumb, gravity: :face %>
                                <div class="chat-about">
                                    <h6 class="m-b-0"><%= @chatroom.assistant.firstname %></h6>
                                    <small>online</small>
                                </div>
                              <% end %>
                          </div>
                      </div>
                  </div>
                  <div class="chat-history" style="height: 400px">
                    <div class="messages" data-chatroom-subscription-target="mensajes">
                      <% @chatroom.mensajes.each do |mensaje| %>
                        <div class="message-row d-flex <%= mensaje.sender?(current_user) ? 'justify-content-end' : 'justify-content-start' %>">
                          <div class="<%= mensaje.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
                            <%= render "mensajes/mensaje", mensaje: mensaje %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                    <div class="rounded" style="margin-top: 10px; background-color: #80808057; padding-top: 10px; height: 61px; padding-left: 10px;">
                      <%= simple_form_for [@chatroom, @mensaje],
                        html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex justify-content-between" } do |f|
                      %>
                        <%= f.input :content,
                          label: false,
                          placeholder: "Message",
                          wrapper_html: {class: "flex-grow-1"},
                          input_html: {"data-chatroom-subscription-target": "inputs"}
                        %>
                        <%= f.submit "Send", class: "btn btn-primary mb-3 mx-3" %>
                        <%= link_to "back", chatrooms_path, class: "btn btn-primary mb-3" %>
                      <% end %>
                    </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
