<h1 class="margin-padding mt-4">About <%= @assistant.firstname %> <%= @assistant.lastname %></h1>
<div class="container py-4">
  <div class="row g-4">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card mb-4">
        <div class="card-body text-center">
          <%= cl_image_tag @assistant.photo.key, class:"avatar-square-shadow-xlg", crop: :thumb, gravity: :face %>
          <h5 class="my-3"><%= @assistant.firstname %></h5>
          <p class="text-muted mb-1">Assistant</p>
          <p class="text-muted mb-4">Available: <%= @assistant.availability %></p>
          <div class="d-flex justify-content-center mb-2">
            <% if policy(@assistant).edit? %>
              <%= link_to "My Applications", applications_path, type: "button", class:"btn btn-outline-primary ms-1" %>
              <%= link_to "Edit Profile", edit_assistant_path, type: "button", class:"btn btn-outline-primary ms-1" %>
              <%#= link_to "Cancel", assitant_path(@assistant), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            <% else %>
              <%= link_to "Chat", new_assistant_chatroom_path(@assistant), type: "button", class:"btn btn-outline-primary ms-1" %>
              <%= link_to "My Applications", applications_path, type: "button", class:"btn btn-outline-primary ms-1" %>
              <%= link_to "Edit Profile", edit_assistant_path, type: "button", class:"btn btn-outline-primary ms-1" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card mb-4 mb-lg-0">
        <div class="card-body p-0">
          <ul class="list-group list-group-flush rounded-3">
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <i class="fas fa-globe fa-lg text-warning"></i>
              <p class="mb-0">https://virtualassistant.com</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <i class="fab fa-github fa-lg" style="color: #333333;"></i>
              <p class="mb-0">virtualassistant</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
              <p class="mb-0">@virtualassistant</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
              <p class="mb-0">virtualassistant</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
              <p class="mb-0">virtualassistant</p>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Full name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @assistant.firstname %> <%= @assistant.lastname %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Email</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @assistant.user.email %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Phone</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @assistant.user.phone %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Skills</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @assistant.skills.chop.gsub(/\"/, '').split(",").drop(1).join(",") %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Address</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0"><%= @assistant.user.address %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row g-4">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card mb-4 mb-md-0">
            <div class="card-body">
              <p class="mb-4"><span class="text-primary font-italic me-1">assigment 1</span> Project Status
              </p>
              <p class="mb-1" style="font-size: .77rem;">Development Design</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <p class="mt-4 mb-1" style="font-size: .77rem;">Project Markup</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card mb-4 mb-md-0">
            <div class="card-body">
              <p class="mb-4"><span class="text-primary font-italic me-1">assigment 2</span> Project Status
              </p>
              <p class="mb-1" style="font-size: .77rem;">Development Design</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <p class="mt-4 mb-1" style="font-size: .77rem;">Project Markup</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card mb-4 mb-md-0">
            <div class="card-body">
              <p class="mb-4"><span class="text-primary font-italic me-1">assigment 3</span> Project Status
              </p>
              <p class="mb-1" style="font-size: .77rem;">Development Design</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <p class="mt-4 mb-1" style="font-size: .77rem;">Project Markup</p>
              <div class="progress rounded" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                  aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card mb-4 mb-md-0">
            <div class="card-body">
              <p class="mb-4"><span class="text-primary font-italic me-1">Reviews</span>
              </p>
                <ul class="list-group" style="font-size: .77rem;">
                  <% @assistant.reviews.each do |review| %>
                  <li class="list-group-item">
                    <%= review.content %>
                    <% review.rating.times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                  </li>
                <% end %>
                </ul>
            </div>
          </div>
        </div>
        <% if current_user.type_of_user == 'Assistant' && current_user.assistant != nil %>
          <%= link_to "Leave us your comment about the platform", new_comment_path, type: "button", class:"btn btn-outline-primary ms-1" %>
        <% else %>
          <%= link_to "Add a review for this assistant", new_assistant_review_path(@assistant.id), type: "button", class:"btn btn-outline-primary ms-1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
