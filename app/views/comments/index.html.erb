<h1 class="margin-padding">What our assistants say about us</h1>
<div class="container px-4">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="mb-3">
          <h5 class="card-title">Reviews <span class="text-muted fw-normal ms-2">[ <%= Comment.count %> ]</span></h5>
      </div>
    </div>
  </div>
  <div class="row gx-4">
    <% @comments.each do |comment| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div><%= cl_image_tag comment.assistant.photo.key, class:"avatar-md rounded-circle img-thumbnail", crop: :thumb, gravity: :face %></div>
            <div class="flex-1 ms-3">
              <h3 class="font-size-16 mb-1">
                "<%= comment.title %>"
              </h3>
            </div>
          </div>
          <div class="mt-3 pt-1">
            <p class="text-muted mb-0 mt-2"><i class="fa-regular fa-comment-dots"></i> <%= comment.content %></p>
            <p class="text-muted mb-0 mt-2">
              <% comment.rating.times do %><i class="fas fa-star"></i>
              <% end %>
            </p>
          </div>
          <div class="mt-3 pt-1">
            <p class="text-muted mb-0 mt-2"><i class="fa-solid fa-user"></i> <%= comment.name %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row g-0 align-items-center pb-4">
    <div class="col-sm-6"></div>
    <div class="col-sm-6">
      <div class="float-sm-end">
        <ul class="pagination mb-sm-0">
          <li class="page-item"><a class="page-link" <%= link_to "<", comments_path(page: @page - 1) %> </li>
          <li class="page-item"><a class="page-link" <%= link_to "1", comments_path %> </li>
          <li class="page-item"><a class="page-link" <%= link_to "2", comments_path(page: 1) %> </li>
          <li class="page-item"><a class="page-link" <%= link_to "3", comments_path(page: 2) %> </li>
          <li class="page-item"><a class="page-link" <%= link_to ">", comments_path(page: @page + 1) %> </li>
        </ul>
      </div>
    </div>
  </div>
</div>
