<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Assistants index</h1>
    </div>
  </div>

  <div class="row">
    <div class="col mb-2">
    <%= form_with url: assistants_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find an assistant by skills or availability" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>

  <div class="py-5">
    <div class="container">
      <div class="row">
        <% @assistants.each do |assistant| %>
        <div class="col-md-4">
        </div>
      </div>
    </div>
  </div>
</div>
